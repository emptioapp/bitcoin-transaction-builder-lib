{
    "compilerOptions": {
        "target": "es6",
        "strict": true,
        "module": "commonjs",
        "esModuleInterop": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "paths": {
        "@/*": [
            "./*"
        ]
    },
    "include": [
        "./**/*.ts",
        "./**/*.tsx"
    ],
    "exclude": [
        "node_modules",
        "<node_internals>/**",
        "bin/**"
    ]
}